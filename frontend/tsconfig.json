{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2018",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["es2018", "dom"],
        "outDir": "./build"
    },
    "exclude": [
        "documents",
        "build",
        "coverage",
        "scripts",
        "**/template",
        "**/node_modules",
        "**/static/**",
        "**/*.test.ts"
    ]
}
